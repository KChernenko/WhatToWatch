<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detail_container">

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:clipToPadding="false"
        android:id="@+id/detail_scroll_view"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <me.bitfrom.whattowatch.utils.SquareImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:id="@+id/poster"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/detail_card_elevation"
                app:cardUseCompatPadding="true">

                <android.support.v7.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:columnCount="2">
                    <TextView
                        android:id="@+id/cv_title"
                        android:layout_width="@dimen/detail_label_width_0"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/detail_margin_16"
                        android:layout_marginRight="@dimen/detail_margin_16"
                        android:layout_marginTop="@dimen/detail_margin_16"
                        android:textColor="@color/desc_text_color"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        app:layout_columnSpan="2"
                        app:layout_columnWeight="1"
                        app:layout_gravity="fill_horizontal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_rating"
                        android:layout_margin="@dimen/detail_margin_5"
                        android:textSize="@dimen/detail_label_text_size"
                        android:textStyle="bold"
                        android:textColor="@color/desc_text_color"
                        android:text="@string/rating"/>
                    <TextView
                        android:layout_width="@dimen/detail_label_width_0"
                        android:layout_height="wrap_content"
                        app:layout_gravity="fill_horizontal"
                        android:id="@+id/rating"
                        android:layout_margin="@dimen/detail_margin_5"
                        android:textColor="@color/desc_text_color"
                        android:textSize="@dimen/detail_content_text_size"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_runtime"
                        android:textSize="@dimen/detail_label_text_size"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/detail_margin_5"
                        android:textColor="@color/desc_text_color"
                        android:text="@string/runtime" />

                    <TextView
                        android:layout_width="@dimen/detail_label_width_0"
                        android:layout_height="wrap_content"
                        app:layout_gravity="fill_horizontal"
                        android:id="@+id/runtime"
                        android:layout_margin="@dimen/detail_margin_5"
                        android:textColor="@color/desc_text_color"
                        android:textSize="@dimen/detail_content_text_size" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_release_year"
                        android:layout_margin="@dimen/detail_margin_5"
                        android:textColor="@color/desc_text_color"
                        android:textSize="@dimen/detail_label_text_size"
                        android:textStyle="bold"
                        android:text="@string/release_year"/>
                    <TextView
                        android:layout_width="@dimen/detail_label_width_0"
                        android:layout_height="wrap_content"
                        app:layout_gravity="fill_horizontal"
                        android:id="@+id/release_year"
                        android:layout_margin="@dimen/detail_margin_5"
                        android:textColor="@color/desc_text_color"
                        android:textSize="@dimen/detail_content_text_size"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_country"
                        android:textSize="@dimen/detail_label_text_size"
                        android:layout_margin="@dimen/detail_margin_5"
                        android:textColor="@color/desc_text_color"
                        android:textStyle="bold"
                        android:text="@string/country" />

                    <TextView
                        android:layout_width="@dimen/detail_label_width_0"
                        android:layout_height="wrap_content"
                        app:layout_gravity="fill_horizontal"
                        android:layout_margin="@dimen/detail_margin_5"
                        android:textColor="@color/desc_text_color"
                        android:id="@+id/country"
                        android:textSize="@dimen/detail_content_text_size" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/detail_margin_5"
                        android:id="@+id/tv_director"
                        android:textSize="@dimen/detail_label_text_size"
                        android:textStyle="bold"
                        android:textColor="@color/desc_text_color"
                        android:text="@string/director"/>
                    <TextView
                        android:layout_width="@dimen/detail_label_width_0"
                        android:layout_height="wrap_content"
                        app:layout_gravity="fill_horizontal"
                        android:layout_margin="@dimen/detail_margin_5"
                        android:textColor="@color/desc_text_color"
                        android:id="@+id/director"
                        android:textSize="@dimen/detail_content_text_size"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/detail_margin_5"
                        android:id="@+id/tv_writer"
                        android:textSize="@dimen/detail_label_text_size"
                        android:textStyle="bold"
                        android:textColor="@color/desc_text_color"
                        android:text="@string/writer"/>
                    <TextView
                        android:layout_width="@dimen/detail_label_width_0"
                        android:layout_height="wrap_content"
                        app:layout_gravity="fill_horizontal"
                        android:layout_margin="@dimen/detail_margin_5"
                        android:textColor="@color/desc_text_color"
                        android:id="@+id/writers"
                        android:textSize="@dimen/detail_content_text_size"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/detail_margin_5"
                        android:id="@+id/tv_genre"
                        android:textSize="@dimen/detail_label_text_size"
                        android:textStyle="bold"
                        android:textColor="@color/desc_text_color"
                        android:text="@string/genre"/>
                    <TextView
                        android:layout_width="@dimen/detail_label_width_0"
                        android:layout_height="wrap_content"
                        app:layout_gravity="fill_horizontal"
                        android:layout_margin="@dimen/detail_margin_5"
                        android:textColor="@color/desc_text_color"
                        android:id="@+id/genre"
                        android:textSize="@dimen/detail_content_text_size"/>

                    <android.support.v7.widget.Space
                        app:layout_columnSpan="2"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1" />

                    <TextView
                        android:id="@+id/plot"
                        android:layout_width="@dimen/detail_label_width_0"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/detail_margin_8"
                        android:typeface="sans"
                        android:textSize="@dimen/detail_plot_text_size"
                        android:textColor="@color/desc_text_color"
                        app:layout_columnSpan="2"
                        app:layout_columnWeight="1"
                        app:layout_gravity="fill_horizontal" />
                </android.support.v7.widget.GridLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/multiple_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginTop="@dimen/detail_margin_top"
            android:layout_marginBottom="@dimen/detail_margin_bottom"
            android:layout_marginRight="@dimen/detail_margin_right"
            android:layout_marginEnd="@dimen/detail_margin_end"
            fab:fab_addButtonColorNormal="@color/fab_color_normal"
            fab:fab_addButtonColorPressed="@color/fab_color_pressed">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/imdb_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/fab_color_normal"
            fab:fab_colorPressed="@color/fab_color_pressed"
            fab:fab_icon="@drawable/ic_link_white_24dp"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_save_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/fab_color_normal"
            fab:fab_colorPressed="@color/fab_color_pressed"
            fab:fab_icon="@drawable/ic_star_white_24dp"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/fab_color_normal"
            fab:fab_colorPressed="@color/fab_color_pressed"
            fab:fab_icon="@drawable/ic_share_white_24dp"/>


    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</android.support.design.widget.CoordinatorLayout>