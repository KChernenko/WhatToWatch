<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/favorite_root_layout">

    <me.bitfrom.whattowatch.ui.recyclerview.EmptyRecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/favorite_list"/>

    <!-- Empty list -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/favorite_list_empty"
        android:gravity="center_horizontal|center_vertical"
        android:paddingLeft="@dimen/random_empty_text_padding"
        android:paddingRight="@dimen/random_empty_text_padding"
        android:paddingTop="@dimen/random_empty_text_padding"
        android:paddingBottom="@dimen/random_empty_text_padding"
        android:text="@string/empty_favorite_list"
        android:textSize="@dimen/random_empty_text_size"
        android:textStyle="bold|italic"/>

    <!-- Empty result -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nothing_found"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="@dimen/random_empty_text_margin"
        android:paddingLeft="@dimen/random_empty_text_padding"
        android:paddingRight="@dimen/random_empty_text_padding"
        android:paddingTop="@dimen/random_empty_text_padding"
        android:paddingBottom="@dimen/random_empty_text_padding"
        android:text="@string/error_nothing_has_found"
        android:textSize="@dimen/random_empty_text_size"
        android:textStyle="bold|italic"/>

</RelativeLayout>